extends layout

block content
	div.container
		div.row
			div.col-md-5
			div.col-md-1
				span#play
					img(src="images/media-playback-start.png" height="60" width="60" alt="Play" style="cursor:pointer;" onclick="resume();")
				span#pause
					img(src="images/media-playback-pause.png" height="60" width="60" alt="Pause" style="cursor:pointer;" onclick="pause();")
		div.row
			div.col-md-5
				div#xChart.chart
			div.col-md-5
				div#yChart.chart
		div.row
			div.col-md-5
				div#zChart.chart
			
		script(src='scripts/libs/canvasjs.min.js')
		script(src='scripts/monitors/charts.js')
		script(src='scripts/monitors/'+chartType+'Charts.js')
